<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true" >

    <ImageView
        android:id="@+id/sharethumbback"
        android:layout_width="@dimen/media_gallery_back_width"
        android:layout_height="@dimen/media_gallery_back_height"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:clickable="false"
        android:duplicateParentState="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/sharethumbImage"
        android:layout_width="@dimen/media_gallery_thumb_width"
        android:layout_height="@dimen/media_gallery_thumb_height"
        android:layout_gravity="center"
        android:background="@android:color/black"
        android:clickable="false"
        android:cropToPadding="false"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        android:src="@drawable/gallery_img" />

    <ImageView
        android:id="@+id/sharethumbImageGone"
        android:layout_width="@dimen/media_gallery_thumb_width"
        android:layout_height="@dimen/media_gallery_thumb_height"
        android:layout_gravity="center"
        android:background="@android:color/black"
        android:clickable="false"
        android:cropToPadding="false"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        android:src="@drawable/gallery_img"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/shareitemCheckBox"
        android:layout_width="@dimen/media_gallery_thumb_width"
        android:layout_height="@dimen/media_gallery_thumb_height"
        android:layout_gravity="center"
        android:clickable="false"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        android:src="@drawable/overlay"
        android:visibility="gone" />

    
    <ImageView
        android:id="@+id/sharevideoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:clickable="false"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        android:src="@drawable/play_video"
        android:visibility="visible" />

</FrameLayout>