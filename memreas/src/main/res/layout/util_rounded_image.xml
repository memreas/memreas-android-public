<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    
    android:orientation="vertical" >
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/rounded_profile_img_small"
        android:layout_width="@dimen/friend_event_profile_width"
        android:layout_height="@dimen/friend_event_profile_height"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_img_small" />

    <ImageView
        android:layout_width="@dimen/friend_event_profile_border_width"
        android:layout_height="@dimen/friend_event_profile_border_height"
        android:scaleType="centerCrop"
        android:src="@layout/util_rounded_rect_transp" />

</FrameLayout>
</LinearLayout>