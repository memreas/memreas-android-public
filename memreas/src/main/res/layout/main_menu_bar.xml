<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100" 
    android:layout_gravity="bottom"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        android:background="@drawable/menu_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageView
            android:id="@+id/menuGallery"
            style="@style/ImageButtonStyle"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="menuGallery"
            android:scaleType="fitXY"
            android:src="@drawable/menu_gallery_select" />

        <ImageView
            android:id="@+id/menuQueue"
            style="@style/ImageButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:onClick="menuQueue"
            android:scaleType="fitXY"
            android:src="@drawable/menu_queue" />

        <ImageView
            android:id="@+id/menuShare"
            style="@style/ImageButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:onClick="menuShare"
            android:scaleType="fitXY"
            android:src="@drawable/menu_share" />

        <ImageView
            android:id="@+id/menuMemreas"
            style="@style/ImageButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:onClick="menuMemreas"
            android:scaleType="fitXY"
            android:src="@drawable/menu_more" />

        <ImageView
            android:id="@+id/menuMore"
            style="@style/ImageButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:onClick="menuMore"
            android:scaleType="fitXY"
            android:src="@drawable/menu_more" />
    </LinearLayout>

</LinearLayout>