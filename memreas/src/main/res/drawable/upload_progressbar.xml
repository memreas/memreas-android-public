<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="#182738" android:centerColor="#182738"
                android:centerY="0.75" android:endColor="#182738" android:angle="90" />
            <stroke android:width="1dp" android:color="#383e0b" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="#ef0700" android:endColor="#009322"
                    android:angle="0" />
                <stroke android:width="1dp" android:color="#383e0b" />
            </shape>
        </clip>
    </item>
</layer-list>
